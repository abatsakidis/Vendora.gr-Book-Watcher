<Window x:Class="VendoraBookWatcher.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Νέα Βιβλία" Height="340" Width="420"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True"
        AllowsTransparency="True" Background="Transparent" ShowInTaskbar="False">
    <Border CornerRadius="14" Background="#EE111111" Padding="12" BorderBrush="#44000000" BorderThickness="1" SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Βρέθηκαν νέα μεταχειρισμένα βιβλία" Foreground="White" FontWeight="Bold" FontSize="14" />

            <Grid Grid.Row="1" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Name="PrevBtn" Content="◀" Width="36" Height="36" Margin="0,0,8,0" Click="PrevBtn_Click"/>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" CornerRadius="10" Background="#22FFFFFF" Height="180" HorizontalAlignment="Center" Width="180">
                        <Image Name="BookImage" Stretch="UniformToFill" ClipToBounds="True"/>
                    </Border>
                    <TextBlock Grid.Row="1" Name="TitleText" Foreground="White" FontWeight="Bold" Margin="0,10,0,0" TextWrapping="Wrap" />
                    <TextBlock Grid.Row="2" Name="PriceText" Foreground="#FFD1FFD1" FontSize="16" FontWeight="SemiBold" />
                </Grid>

                <Button Grid.Column="2" Name="NextBtn" Content="▶" Width="36" Height="36" Margin="8,0,0,0" Click="NextBtn_Click"/>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Name="CounterText" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <Button Content="Άνοιγμα συνδέσμου" Margin="0,0,8,0" Padding="10,6" Click="OpenLink_Click"/>
                <Button Content="Κλείσιμο" Padding="10,6" Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>